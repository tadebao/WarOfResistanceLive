    <link href="https://kokohuang.github.io/WarOfResistanceLive/2020/11/26/1931%E5%B9%B411%E6%9C%8826%E6%97%A5/"/>
    <id>https://kokohuang.github.io/WarOfResistanceLive/2020/11/26/1931%E5%B9%B411%E6%9C%8826%E6%97%A5/</id>
